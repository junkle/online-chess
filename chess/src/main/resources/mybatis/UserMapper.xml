<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xynu.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.xynu.entity.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="image_url" property="imageUrl" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="base_column_list">
        id,username,password,image_url
    </sql>
    <sql id="base_table" >
        user
    </sql>

    <select id="selectByUser" resultType="java.lang.Integer">
        select id FROM
        <include refid="base_table"/>
        WHERE
        username = #{username,jdbcType=VARCHAR}
        AND
        password = #{password,jdbcType=VARCHAR}
        limit 1
    </select>

    <insert id="insert" parameterType="com.xynu.entity.User" >
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO
        <include refid="base_table"/>
        (username,password,image_url)
        VALUES (#{username,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},#{imageUrl,jdbcType=VARCHAR})
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="base_column_list"/>
        from
        <include refid="base_table"/>
        where id= #{id, jdbcType=INTEGER}
    </select>
</mapper>